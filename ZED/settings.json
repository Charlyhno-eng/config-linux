{
  // ------------------- AI --------------------
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "default_profile": "ask"
  },
  "language_models": {
    "google": {
      "available_models": [
        {
          "name": "gemini-1.5-flash-latest",
          "display_name": "Gemini 1.5 Flash (Latest)",
          "max_tokens": 1000000
        }
      ]
    }
  },

  // -------------- IDE experience--------------
  "format_on_save": "on",
  "show_completion_documentation": true,
  "scroll_sensitivity": 3,

  // Error lens
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": false,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },

  // --------------- Appearance ----------------
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 12,
  "ui_font_weight": 400,
  "buffer_font_size": 9,
  "buffer_font_weight": 400,
  "hide_mouse": "on_typing_and_movement",
  "show_edit_predictions": true,
  "theme": "Phantom Nebula",

  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "breadcrumbs": false
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "collaboration_panel": {
    "dock": "left",
    "button": false
  },
  "notification_panel": {
    "dock": "left",
    "button": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "preview_tabs": {
    "enabled": false
  },
  "max_tabs": 6,

  // ----------------- Others ------------------
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // --------------- Languages ---------------
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
        "source.removeUnusedmports": true
      }
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "eslint"],
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
        "source.removeUnusedmports": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
        "source.removeUnusedmports": true
      }
    }
  },

  // ---------- File scan exclusion ----------
  "file_scan_exclusions": [
    "**/.conductor",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/.report",
    "**/node_modules"
  ]
}
